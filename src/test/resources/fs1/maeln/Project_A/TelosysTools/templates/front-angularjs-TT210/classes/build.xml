<project name="My Project" default="compile"  basedir=".">

	  <path id="compile.classpath">
	    <fileset dir=".">
	      <include name="*.jar"/>
	    </fileset>
	  </path>

	  <target name="compile" description="Compile Java classes">
	    <javac srcdir="." destdir=".">
	        <classpath refid="compile.classpath"/>
	    </javac>
	  </target>

</project> 